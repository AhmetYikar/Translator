
@{
    ViewData["Title"] = "TranslateText";
}
<style>
   
    .height-20 {
        height: 20rem !important;
    }
    .height-14 {
        height: 14rem !important;
    }
</style>
<div class="py-5">
    <h4 class="mb-3 text-center">Translate Englist To l33tsp34k</h4>
    <div class="row">
        <div class="col-md-6">
            <div class="card height-20">
                <div class="card-body">
                    <div class="">
                        <textarea id="text" class="form-control height-14" placeholder="Enter the text to be translated"></textarea>
                    </div>
                    <div class="mt-3 float-right">
                        <button id="btnClear" class="btn btn-danger"> Clear </button>
                        <button id="btnTranslate" class="btn btn-success"> Translate </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card height-20">
                <div class="card-body">
                    <div id="translationResultParentDiv">
                        @*_TranslateTextPartial comes here via ajax*@
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>




<script>
    $("#btnClear").click(function () {
        $("#text").val("");     
    })

    $("#btnTranslate").click(function () {
        let text = $("#text").val();
        translateText(text);
    })

    function translateText(text) {     
 
        $.ajax({
            url: "/LeetSpeakTranslation/_TranslateTextPartial",
            type: "POST",
            data: { text },
            dataType: "html",
            success: function (response) {
                $("#translationResultParentDiv").html(response);
            },
            error: function (error) {
                alert(error.status);
            }
        });
    }
</script>